<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textAppearance">@style/WhiteText</item>
        <item name="android:textAppearanceLarge">@style/WhiteText</item>
    </style>

    <style name="Poster" parent="AppTheme">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:contentDescription">@string/content_description_img_ivPoster</item>
    </style>

    <style name="VoteAverage.80" parent="AppTheme">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/vote_average_circle</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="VoteAverage.50" parent="AppTheme">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textSize">11dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/vote_average_circle</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="Backdrop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:contentDescription">@string/content_description_img_ivBackdrop</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Backdrop.Portrait" parent="Backdrop">
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="Backdrop.Landscape" parent="Backdrop">
        <item name="android:layout_height">150dp</item>
    </style>


    <style name="DetailTitle" parent="@style/TextAppearance.AppCompat.Small.Inverse">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="DetailDateRelease" parent="Base.TextAppearance.AppCompat.Small.Inverse">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="DetailOverview" parent="Base.TextAppearance.AppCompat.Small.Inverse">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="DetailSubtitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="DetailProgressBar" parent="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="WhiteText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ActionBar.Solid.FamousMovies.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>
    <style name="AppTheme.FamousMovies" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.FamousMovies.NoTitle</item>
        <item name="android:textAppearance">@style/WhiteText</item>
    </style>

    <style name="Offline" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/WhiteText</item>
    </style>

    <style name="OfflineMsg" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/WhiteText</item>
    </style>

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ErrorMessage" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorError</item>
    </style>
</resources>